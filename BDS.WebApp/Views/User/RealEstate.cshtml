@model BDS.WebApp.Models.User.RealEstateViewModel

@{
    ViewData["Title"] = "Nhà đất đã mua";
}

<head>
    <link rel="stylesheet" href="~/assets/css/estate.css">
</head>
<div class="grid margin-top-60px background-color">
           <div class="navigation-bar grid wide ">
               <div class=row>
                    <a asp-action="Index" asp-controller="Home" > Trang Chủ >></a>
               </div>
               <div>
                    <a asp-action="RealEstate" asp-controller="User" class="font-size-20px">Nhà Đất Đã Mua</a>
               </div>
                </div>
        </div>
<!-- ----------------------------------------------- -->        
          <div id="product--list--estate" class="grid">
            <div class=" border-around-4px grid wide row">
                <div class="product--list--estate--item col l-12 ">
                    <div class=" row  margin-left-right ">
                        <div class="m col l-3 border-4px-2 ">
                            <div class=" col row">
                                <a  class=" active product-btn-estate1  l-10 l-o-1 border-2px">
                                    Nhà Đất Đã Mua
                                </a>
                            </div>  
                        </div>
                    </div>
                    @{
                        foreach (var item in Model.realEstates)
                        {
                            <div class="row margin-left-right margin-top-8px " >
                                <div class=" l-3 margin-left-8px border-2px background-color position-initial">
                                    @{
                                        string imgPath = "";
                                        if (item.userRealEstateMedia.Count > 0)
                                        {
                                            imgPath = item.userRealEstateMedia[0].Path;
                                        }
                                    }
                                    <img src="~/@imgPath">
                                </div>
                                <div class = " product--list--estate--item--info  l-9 m-12 c-12 ">
                                    <div class="row">
                                        <div class="col l-11 m-11 c-11"> 
                                            <a class="text-decoration-none-red" asp-action="RealEstateDetail" asp-controller="User" asp-route-id="@item.id">
                                                <h1>@item.name</h1>
                                            </a>

                                            <p class="text" >Vị trí: @item.location
Diện tích: @item.acreage (Dài: @item.length m, rộng @item.width m)
Hướng: @item.orientation 
Giá: @item.price TR/m2
Tầng: @item.floor
                                            </p>
                        
                                        </div>
                                    </div>
                                    <div class="row right0">
                                        <p>@item.DateModify</p>
                                    </div>
                           
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="grid wide row">
                <div class="pagination">
                    <a href="#" class="margin-left-12px">&laquo;</a>
                    <a href="#" class="active">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#">6</a>
                    <a href="#">7</a>
                    <a href="#">8</a>
                    <a href="#">9</a>
                    <a href="#">12</a>
                    <a href="#">&raquo;</a>
                  </div>
            </div>
          </div>
          
          <!-- ------------------------------- -->