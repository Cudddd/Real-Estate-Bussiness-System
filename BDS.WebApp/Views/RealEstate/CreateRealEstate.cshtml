@using BDS.Data.Enum
@@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;
@model BDS.WebApp.Models.RealEstate.RealEstateSellViewModel

@{
  ViewData["Title"] = "Nhờ bán/thuê";
}

<head>
  <link rel="stylesheet" href="~/assets/css/sell-rent.css">
  <style>
      .field-validation-error { 
          color: red
      }
      .validation-summary-errors {
          color: red
      }
  </style>
</head>

<!-- ---------------------------------------------------------------- -->
        <!-- ------------------------------- -->
        <div class="grid margin-top-60px background-color">
           <div class="navigation-bar grid wide ">
               <div class=row>
                    <a href="@Url.ActionLink("Index","Home")" > Trang Chủ >></a>
               </div>
               <div>
                    
               </div>
               <a href="@Url.ActionLink("Sell","Estate")" class="font-size-20px">Nhờ Bán Thuê</a>
                </div>
        </div>
<!-- ----------------------------------------------- -->        
          <div id="sell-rent" class="grid">
            <div class=" grid wide row">
                
                <div class="sell-rent-info col l-12">
                    <div class="row border-bottom-4px margin-left-right ">
                        <a class="sell-rent-btn l-1 l-o-1 ">
                            Mới
                        </a>
                        <a class="sell-rent-btn l-2 ">
                            Nhà đất đã mua
                        </a>
                    </div>

                  <div class="container border-around-4px  margin-left-right">
                      <form method="post" enctype="multipart/form-data" asp-controller="RealEstate" asp-action="CreateRealEstate">
                        <div class="row ">
                        <div class="l-4 l-o-4"> 
                           <p class="padding-10px">Chọn ảnh(tối đa 8 ảnh. Giữ CTRL để chọn nhiều ảnh):</p>
                           <input name="realEstateImgs"  class="padding-left-30px" type="file" id="fileToUpload" multiple>
                        </div>
                        </div>
                      
                          <div class="margin-left-right">
                            <div class="row">
                            <div class="col-25">
                              <label for="location">Tên nhà</label>
                            </div>
                              <div class="col-75">
                                <input  type="text" id="location" asp-for="request.name" placeholder="Tên nhà..">
                              </div>
                              <span asp-validation-for="@Model.request.name">adasd</span>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="location">Vị trí</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="location" asp-for="request.location" placeholder="Vị trí..">
                            </div>
                            <span asp-validation-for="@Model.request.location">222</span>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="acreage">Diện tích</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="acreage" name="acreage" placeholder="Diện tích..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="acreage">Chiều dài</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="acreage" name="length" placeholder="Chiều dài..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="acreage">Chiều rộng</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="acreage" name="width" placeholder="Chiều rộng..">
                            </div>
                          </div>
                            <div class="row">
                              <div class="col-25">
                                <label for="orient">Hướng</label>
                              </div>
                              <div class="col-75">
                                <select id="orient" name="orientation" asp-items="Html.GetEnumSelectList<Orientation>()">
                                </select>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-25">
                                <label for="orient">Bán/thuê</label>
                              </div>
                              <div class="col-75">
                                <select id="orient" name="sell">
                                  <option value="ban">Bán</option>
                                  <option value="thue">Cho thuê</option>
                                </select>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-25">
                                <label for="orient">Loại nhà</label>
                                </div>
                              <div class="col-75">
                                <select id="orient" name="typeId" asp-items="@(new SelectList(Model.realEstateTypes,"id","name"))">
                                </select>
                                </div>
                              </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="price">Giá</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="price" name="price" placeholder="Mức giá..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="floor">Tầng</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="floor" name="floor" placeholder="Tầng..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="numberofbedroom">Số phòng ngủ</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="numberofbedroom" name="bedRoom" placeholder="Số phòng ngủ..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="numberoftoilet">Số toilet</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="numberoftoilet" name="bathRoom" placeholder="Số toilet..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="adress">Địa chỉ</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="adress" name="adress" placeholder="Địa chỉ..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="frontline">Mặt tiền</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="frontline" name="facade" placeholder="Số mét mặt tiền..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="mainstreet">Đường chính</label>
                            </div>
                            <div class="col-75">
                              <input type="text" id="mainstreet" name="mainLine" placeholder="Tên đường chính..">
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-25">
                              <label for="moreinfo">Mô tả thêm</label>
                            </div>
                            <div class="col-75">
                              <textarea id="moreinfo" name="description" placeholder="Mô tả thêm.." style="height:200px"></textarea>
                            </div>
                          </div>
                          </div>
                          <div class="row">
                            <input type="submit" class="l-o-6" value="Gửi">
                          </div>
                        </form>
            
                        </div>
                    
                </div>
              
            </div>
           

          </div>

