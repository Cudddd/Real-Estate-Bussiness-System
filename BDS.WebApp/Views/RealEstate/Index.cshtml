@using BDS.Data.Enum
@model BDS.WebApp.Models.RealEstate.RealEstateViewModel
@{
    ViewData["Title"] = "Nhà đất";
}



<head>
    <link rel="stylesheet" href="~/assets/css/estate.css">
    
</head>



<div class="grid margin-top-60px background-color">
    <div class="navigation-bar grid wide ">
        <div class=row>
            <a href="@Url.ActionLink("Index","Home")" > Trang Chủ >></a>
        </div>
        <div>
            <a href="@Url.ActionLink("Index","RealEstate")" class="font-size-20px">Nhà Đất</a>
        </div>
    </div>
</div>

<!-- ----------------------------------------------- -->        
          <div id="product--list--estate" class="grid">
            <div class=" border-around-4px grid wide row">
                <div class="product--list--estate--item col l-12 ">
                    <div class=" row  margin-left-right ">
                        <div class="m col l-3 border-4px-2 ">
                            <div class=" col row">
                                <a  class=" active product-btn-estate1  l-5 l-o-1 border-2px">
                                    Bán 
                                </a>
                                <a class="product-btn-estate1 l-5 border-2px">
                                    Thuê 
                                </a>
                            </div>  
                        </div>
                        <div class="col l-8 l-o-1 border-4px-2">
                            <div class="col row">
                                <a class="product-btn-estate1  l-2 border-2px">
                                    Khu vực <i class=ti-angle-down></i>
                                </a>
                                <a class="product-btn-estate1  l-2 l-o-1 border-2px">
                                    Mức Giá <i class=ti-angle-down></i>
                                </a>
                                <a class="product-btn-estate1  l-2 l-o-1 border-2px">
                                    Dự Án <i class=ti-angle-down></i>
                                </a>
                                <a class="product-btn-estate1  l-2 l-o-1 border-2px">
                                    Diện tích <i class=ti-angle-down></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div >
                        <a class="sort-btn l-2   l-o-10 m-4 m-o-4 c-4 c-o-4">
                            MỚI NHẤT <i class=ti-angle-down></i>
                        </a>
                        
                    </div>
                    
                    
                    @{
                                            foreach (var item in Model.realEstates)
                                            {
                                                <div class="row margin-left-right margin-top-8px " >
                                                    <div class = " l-3 margin-left-8px border-2px background-color position-initial">
                                                        @{
                                                            if (item.realEstateMedia.FirstOrDefault(x => x.Type == MediaType.ThumnailImg)!= null)
                                                            {
                                                                <img src="~/@item.realEstateMedia.FirstOrDefault(x => x.Type == MediaType.ThumnailImg).Path">
                                                            }
                                                            else
                                                            {
                                                                <img src="">
                                                            }

                                                        }
                                                        @if (@item.sell)
                                                        {
                                                            <span class="position-absolute"> BÁN</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="position-absolute"> THUÊ</span>
                                                        }
                                                        
                                                    </div>
                                                    <div class = " product--list--estate--item--info  l-9 m-12 c-12 ">
                                                        <div class="row">
                                                            <div class="col l-11 m-11 c-11"> 
                                                                <a class="text-decoration-none-red" href="@Url.ActionLink("Detail","RealEstate", new { @item.id })">
                                                                        <h1>@item.name</h1>
                                                                </a>

                                                                <p class="text" >Vị trí: @item.location
Diện tích: @item.acreage (Dài: @item.length m, rộng: @item.width m)
Hướng: @item.orientation  
Giá: @item.price Tr/m2
Tầng: @item.floor
                                                                </p>
                        
                                                            </div>
                                                            <div class="col l-1 m-1 c-1">
                                                                <i class=ti-heart></i>
                                                            </div>
                                                        </div>
                                                        <div class="row right0">
                                                            <p>@item.DateModify</p>
                                                        </div>
                           
                                                    </div>
                                                </div>
                                            }
                                        }
                </div>
            </div>

              <div class="grid wide row">
                  <div class="pagination">

                      <a href="@Url.ActionLink("Index", "Area")" class="margin-left-12px">&laquo;</a>
              
                      @{
                          if(Model.pageIndex < 9)
                          {
                              for (int pageIndex = 1; pageIndex < 10; pageIndex++)
                              {
                                  if (pageIndex == Model.pageIndex)
                                  {
                                      <a href="@Url.ActionLink("Index", "RealEstate", new {@pageIndex})" class="active">@pageIndex</a>
                                  }
                                  else
                                  {
                                      <a href="@Url.ActionLink("Index", "RealEstate", new {@pageIndex})">@pageIndex</a>
                                  }
                              }
                          }
                          else
                          {
                              for (int pageIndex = @Model.pageIndex - 7; pageIndex < @Model.pageIndex - 8 + 10; pageIndex++)
                              {
                                  if (pageIndex == Model.pageIndex)
                                  {
                                      <a href="@Url.ActionLink("Index", "RealEstate", new {@pageIndex})" class="active">@pageIndex</a>
                                  }
                                  else
                                  {
                                      <a href="@Url.ActionLink("Index", "RealEstate", new {@pageIndex})">@pageIndex</a>
                                  }
                              }
                          }
                                               
                      }
                      <a href="#">&raquo;</a>
                      </div>
                  </div>
          </div>
          
          <!-- ------------------------------- -->
   


                    
