@model BDS.Services.Model.NewsModel
@{
    ViewData["Title"] = "Cập nhật tin tức";
    Layout = "_AdminLayout";
}


<head>
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/assets/css/admin-info.css">
</head>

<div class="admin-form  grid wide row">
    <div class="admin col  ">
    <div class="content">
        <h1 class="loginh2" >THÔNG TIN TIN TỨC</h1>
        <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="UpdateNewsPost" asp-route-id="@Model.id">
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Tiêu đề:</h1>
            <div class="col l-10">
                <input style="text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="title" value="@Model.title">
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Mô tả:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="description" >@Model.description</textarea>
            </div>
        </div>
            <div class=" account-info row"><h1 class="col l-2 paddingt  ">Nội dung:</h1>
                <div class="col l-10">
                    <textarea style="min-height: 200px;text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="content">@Model.content</textarea>
                </div>
            </div>
            <input type="submit" class="second-button2 margin-top-20px" value="CẬP NHẬT">
        </form>
    </div>
    
    
</div>
</div>