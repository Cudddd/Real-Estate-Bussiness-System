@model List<BDS.Data.Entities.Project>
@{
    ViewData["Title"] = "Thêm dự án tiêu biểu";
    Layout = "_AdminLayout";
}


<head>
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/assets/css/admin-info.css">
    <link rel="stylesheet" href="~/assets/css/sell-rent.css">
</head>

<div class="admin-form  grid wide row">
                
              
    <div class="admin col  ">
        <form method="post">
            <div class="content">
                <h1 class="loginh2">THÊM DỰ ÁN TIÊU BIỂU</h1>
                <div class=" account-info row">
                    <h1 class="col l-2 paddingt  ">Dự án:</h1>
                    <div class="col l-10">
                        <select id="orient" name="id" asp-items="@(new SelectList(Model, "id", "name"))">
                        </select>
                    </div>
                </div>
            </div>
            <button asp-action="AddHighlightProjectPost" asp-controller="Admin" class="second-button2 margin-top-20px">THÊM</button>
        </form>
    </div>
</div>