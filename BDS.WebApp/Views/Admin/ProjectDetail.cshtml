@using BDS.Data.Enum
@model BDS.WebApp.Models.Admin.ProjectDetailViewModel

@{
    ViewData["Title"] = "Thông tin dự án";
    Layout = "_AdminLayout";
}

<head>
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/assets/css/admin-info.css">
    <style>
        .right0 img{
          height:120px;
        }
    </style>
</head>

<div style="width: 100%" class="admin-form grid wide row">
<div class="admin col">
    <div class="content">
        <h1 class="loginh2" >THÔNG TIN DỰ ÁN</h1> 
        <div class="grid account-info row"><h1 class="col l-2  ">Tên dự án:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.name</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Nhà đầu tư:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.invesloper</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Giới thiệu:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.introduce</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Thông tin:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.info</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Tiến độ:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.procedure</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Lợi ích khách hàng:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@Model.Project.customerBenefits</p>
            </div>
        </div>
        <div class="grid account-info  row"><h1 class="col l-2  ">Hình ảnh:</h1> 
            <div class="col l-9 right0">
                <div class="row right0">
                    @{
                        string introVidPath = "";
                        string procedureVidPath = "";
                        foreach (var item in Model.Media)
                        {
                            if (item.Type != MediaType.IntroduceVideo && item.Type != MediaType.ProcedureVideo)
                            {
                                <div class="col l-2">
                                    <img src="~/@item.Path" alt="">
                                    <div style="margin-right: 50px" class="i-1">
                                        <i class=ti-pencil></i>
                                    </div>
                                </div>
                            }
                            else
                            {
                                if (item.Type == MediaType.IntroduceVideo)
                                    introVidPath = item.Path;
                                else procedureVidPath = item.Path;
                            }
                        }
                    }
                </div>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Link video giới thiệu:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@introVidPath</p>
            </div>
        </div>
        <div class="grid account-info row"><h1 class="col l-2  ">Link video tiến độ:</h1>
            <div class="col l-9"><p class="col l-9 max-widtht text  ">@procedureVidPath</p>
            </div>
        </div>
        <form>
            <button asp-action="UpdateProject" asp-controller="Admin" asp-route-id="@Model.Project.id" class="second-button2 margin-top-20px">CẬP NHẬT THÔNG TIN</button>
        </form>
    </div>
                     
</div>
</div>