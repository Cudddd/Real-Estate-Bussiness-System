@using BDS.Data.Enum
@model BDS.WebApp.Models.Admin.ProjectDetailViewModel

@{
    ViewData["Title"] = "Cập nhật dự án";
    Layout = "_AdminLayout";
}


<head>
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/assets/css/admin-info.css">
    <link rel="stylesheet" href="~/assets/css/sell-rent.css">
</head>

<div class="admin-form  grid wide row">
                
              
<div class="admin col  ">
    <div class="content">
        <h1 class="loginh2" >THÔNG TIN DỰ ÁN</h1>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Tên dự án:</h1>
            <div class="col l-10">
                <input class="col minwidtht max-widtht " type="text" id="price" name="price" value="@Model.Project.name">
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Nhà đầu tư:</h1>
            <div class="col l-10">
                <input class="col minwidtht max-widtht " type="text" id="price" name="price" value="@Model.Project.invesloper">
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Thông tin:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align:left;" class="col minwidtht max-widtht " type="text" id="price" name="price">@Model.Project.info</textarea>
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Tiến độ:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align:left;" class="col minwidtht max-widtht " type="text" id="price" name="price">@Model.Project.procedure</textarea>
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Lợi ích khách hàng:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align:left;" class="col minwidtht max-widtht " type="text" id="price" name="price">@Model.Project.customerBenefits</textarea>
            </div>
        </div>
        @{
            String introVidPath = "";
            String proVidPath = "";
            foreach (var item in @Model.Media)
            {
                if (item.Type == MediaType.IntroduceVideo)
                    introVidPath = item.Path;
                else if (item.Type == MediaType.ProcedureVideo) proVidPath = item.Path;
            }
        }
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Link video giới thiệu:</h1>
            <div class="col l-10">
                <input class="col minwidtht max-widtht " type="text" id="price" name="price" value="@introVidPath">
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Link video tiến độ:</h1>
            <div class="col l-10">
                <input class="col minwidtht max-widtht " type="text" id="price" name="price" value="@proVidPath">
            </div>
        </div>
        
    </div>
    
    <button class="second-button2 margin-top-20px">CẬP NHẬT</button>
</div>
</div>