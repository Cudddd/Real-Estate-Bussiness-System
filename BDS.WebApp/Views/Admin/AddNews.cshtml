
@{
    ViewData["Title"] = "Thêm tin tức";
    Layout = "_AdminLayout";
}


<head>
    <link rel="stylesheet" href="~/assets/css/admin.css">
    <link rel="stylesheet" href="~/assets/css/admin-info.css">
    <link rel="stylesheet" href="~/assets/css/sell-rent.css">
</head>

<div class="admin-form  grid wide row">
                
              
<div class="admin col  ">
    <div class="content">
        <h1 class="loginh2" >THÔNG TIN TIN TỨC</h1>
        <div class="grid account-info  row"><h1 class="col l-2 paddingt  ">Hình ảnh:</h1> 
            <div class="col l-10 ">
                <div class="">
                    <div class="l-3"> 
                        <p class="">Chọn ảnh(Tối đa 8 ảnh. Giữ CTRL để chọn nhiều ảnh):</p>
                        <input  class="" type="file" name="fileToUpload" id="fileToUpload" multiple>
                    </div>
                </div>
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Tiêu đề:</h1>
            <div class="col l-10">
                <input style="text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="title" placeholder="Tiêu đề..">
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Mô tả:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="description" placeholder="Mô tả.."></textarea>
            </div>
        </div>
        <div class=" account-info row"><h1 class="col l-2 paddingt  ">Nội dung:</h1>
            <div class="col l-10">
                <textarea style="min-height: 200px;text-align: left" class="col minwidtht max-widtht " type="text" id="price" name="content" placeholder="Nội dung.."></textarea>
            </div>
        </div>
    </div>
    
    <button class="second-button2 margin-top-20px">THÊM</button>
</div>
</div>